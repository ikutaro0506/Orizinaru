<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="android.lifeistech.com.orizinaru.OmikuziActivity"
                android:orientation="vertical"
                android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="446dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.32">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/box_up"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal|bottom"
            tools:src="@drawable/omikuzisita"
            android:layout_alignTop="@+id/box"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:layout_width="145dp"
            android:layout_height="229dp"
            android:id="@+id/arm"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal|top"
            tools:src="@mipmap/arm"
            android:layout_above="@+id/box_up"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:id="@+id/omikuji"
            android:layout_gravity="center_horizontal|top"
            android:layout_above="@+id/box_up"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/box"
            android:scaleType="fitXY"
            tools:src="@drawable/omikuziue"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal|bottom"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="おみくじを引く"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:onClick="button"/>

</LinearLayout>
